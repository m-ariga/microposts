<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %></br>
        <%= @user.location %></br>
        <%= @user.profile %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% @users.each do |user| %>
      <ul class="followings/followers">
        <li><%= link_to gravatar_for(user), user_path(user) %> <%= user.name %></li>
      </ul>
    <% end %>
  </div>
</div>


